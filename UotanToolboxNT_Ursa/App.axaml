<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:semi="https://irihi.tech/semi"
			 xmlns:u-semi="https://irihi.tech/ursa/themes/semi"
             x:Class="UotanToolboxNT_Ursa.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
  
    <Application.Styles>
        <semi:SemiTheme Locale="zh-CN" />
        <u-semi:SemiTheme Locale="zh-CN"/>
        <semi:SemiPopupAnimations />
    </Application.Styles>
    <Application.Resources>
        <ControlTheme x:Key="InfoButton" TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource SukiPrimaryColor}" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Padding="{TemplateBinding Padding}"
							TextElement.Foreground="{DynamicResource SukiPrimaryColor}"
							TextElement.FontWeight="Bold">
                        <Panel>
                            <ContentPresenter Content="{TemplateBinding Content}"
											  Margin="{TemplateBinding Padding}"/>
                        </Panel>
                    </Border>
                </ControlTemplate>
            </Setter>
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="Transparent" />
                <Style Selector="^ /template/ Border">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.03" ScaleY="1.03" />
                        </Setter.Value>
                    </Setter>
                </Style>
            </Style>
            <Style Selector="^:pressed">
                <Setter Property="Background" Value="Transparent" />
                <Style Selector="^ /template/ Border">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.97" ScaleY="0.97" />
                        </Setter.Value>
                    </Setter>
                </Style>
            </Style>
            <Style Selector="^:pressed /template/ Border">
                <Setter Property="Background" Value="Transparent" />
            </Style>
        </ControlTheme>
        <ControlTheme x:Key="UotanMinimizeButton" TargetType="Button">
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Background" Value="#f2f2f6" />
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="#8ac16c" />
            </Style>
        </ControlTheme>
        <ControlTheme x:Key="UotanCloseButton" TargetType="Button">
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Background" Value="#f2f2f6" />
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="#d2796a" />
            </Style>
        </ControlTheme>
    </Application.Resources>
</Application>